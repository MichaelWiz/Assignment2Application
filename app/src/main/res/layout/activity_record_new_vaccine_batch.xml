<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordNewVaccineBatch"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_healthcareCentre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:text="Healthcare Center"
        android:textSize="24sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/text_view_list_vaccine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginBottom="16dp"
        android:text="List of Vaccine:"
        android:textColor="@color/purple_700"
        android:textSize="18sp"
        android:textStyle="italic"/>

    <ListView
        android:id="@+id/list_view_vaccine"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="6dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_vaccine_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginBottom="16dp"
                android:text="Vaccine ID      :"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/edit_text_vaccine_id_record"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Enter Vaccine ID here"
                android:gravity="center"
                android:inputType="text"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_batch_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginBottom="16dp"
                android:text="Batch Number:"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/edit_text_vaccine_batch_number_record"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Enter Vaccine Batch Number here"
                android:gravity="center"
                android:inputType="text"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/image_button_calendar_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/calendar"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:contentDescription="This is a calendar button"
                tools:ignore = "HardcodedText"/>

            <EditText
                android:id="@+id/edit_text_expiry_date_record"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Click Calendar to choose Expiry Date"
                android:gravity="left"
                android:enabled="false"
                android:layout_marginTop="35dp"
                android:inputType="date"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginBottom="16dp"
                android:text="Quantity           :"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/edit_text_quantity_record"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Enter Quantity here"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/btn_back_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Back"/>

            <Button
                android:id="@+id/btn_add_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>