<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".signupAdmin">

    <TextView
        android:id="@+id/text_view_centre_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List of Centre:"
        android:textSize="16sp"/>

    <ListView
        android:id="@+id/list_view_centre_list"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="6dp"/>

    <Button
        android:id="@+id/btn_back_admin_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_admin_signup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Name:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_text_admin_signup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Fullname" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_admin_signup_centre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Centre:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_text_admin_signup_centre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Centre Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_admin_signup_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Username:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_text_admin_signup_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Username" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_admin_signup_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Password:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_text_admin_signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_admin_signup_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Confirm Password:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_text_admin_signup_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_admin_signup_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Email:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_text_admin_signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:inputType="textEmailAddress" />
    </LinearLayout>




    <Button
        android:id="@+id/btn_submit_admin_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:enabled="false"
        android:text="Submit" />

</LinearLayout>